<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fancylynx.application.view.monolith.MonolithController">
    <TextField fx:id="imageDirectory" layoutX="106.0" layoutY="71.0" />
    <TextField fx:id="imageName" layoutX="323.0" layoutY="71.0" />
    <Label fx:id="imageDirectoryLabel" layoutX="147.0" layoutY="36.0" prefHeight="17.0" prefWidth="96.0" text="Image Dir" />
    <Label fx:id="imageNameLabel" layoutX="364.0" layoutY="36.0" prefHeight="17.0" prefWidth="96.0" text="Image Name" />
    <RadioButton fx:id="jpg" layoutX="166.0" layoutY="179.0" mnemonicParsing="false" text=".jpg">
        <toggleGroup>
            <ToggleGroup fx:id="formatToggleGroup" />
        </toggleGroup>
    </RadioButton>
    <RadioButton fx:id="png" layoutX="368.0" layoutY="179.0" mnemonicParsing="false" text=".png" toggleGroup="$formatToggleGroup" />
    <RadioButton fx:id="jpeg" layoutX="258.0" layoutY="179.0" mnemonicParsing="false" text=".jpeg" toggleGroup="$formatToggleGroup" />
    <Label fx:id="imageFormatLabel" layoutX="252.0" layoutY="132.0" prefHeight="17.0" prefWidth="96.0" text="Image Format" />
    <Button fx:id="save" layoutX="219.0" layoutY="232.0" mnemonicParsing="false" onAction="#handleSaveButtonAction" prefHeight="46.0" prefWidth="144.0" text="Apply" />
    <Button fx:id="viewConfiguration" layoutX="23.0" layoutY="377.0" mnemonicParsing="false" onAction="#handleViewConfigurationButtonAction" prefHeight="30.0" prefWidth="190.0" text="View Config (print to console)" />
    <Button fx:id="createTour" layoutX="373.0" layoutY="456.0" mnemonicParsing="false" onAction="#handleCreateTourButtonAction" prefHeight="107.0" prefWidth="174.0" text="New Tour" />
</AnchorPane>
