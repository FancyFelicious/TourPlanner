<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fancylynx.application.view.MainController">

    <left>
        <VBox spacing="10">
            <Label id="appTitle" alignment="CENTER" prefHeight="35.0" prefWidth="149.0" stylesheets="@styles.css" text="Tour Planner">
                <VBox.margin>
                    <Insets top="10" />
                </VBox.margin>
            </Label>
            <TextField id="tourSearch" focusTraversable="false" promptText="Search Tours.." />
            <Button id="newTourBtn" onAction="#handleCreateTourButton" prefHeight="46.0" prefWidth="150.0" stylesheets="@styles.css" text="Create new Tour" textFill="WHITE">
            <font>
               <Font size="17.0" />
            </font></Button>
            <ScrollPane prefWidth="150.0" visible="false" VBox.vgrow="ALWAYS">
                <VBox id="tourList" fx:id="tourList" prefHeight="2.0" prefWidth="135.0" spacing="10" stylesheets="@styles.css">
                    <!-- Dynamic list of tour buttons -->
                </VBox>
            </ScrollPane>
        </VBox>
    </left>
    <center>
        <!-- Main window content -->
    </center>

</BorderPane>
